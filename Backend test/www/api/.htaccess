RewriteEngine On    # Turn on the rewriting engine
RewriteRule ^tickets/read$ ./tickets/read.php [NC,L]
RewriteRule ^tickets/read/([0-9_-]*)$ ./tickets/read.php?id=$1 [NC,L]
RewriteRule ^tickets/create$ ./tickets/create.php [NC,L]
RewriteRule ^tickets/update$ ./tickets/update.php [NC,L]
RewriteRule ^tickets/delete$ ./tickets/delete.php [NC,L]